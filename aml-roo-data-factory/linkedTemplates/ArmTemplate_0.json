{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "aml-roo-data-factory"
		},
		"AMLDatabase_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AMLDatabase'"
		},
		"AzureBlobStorage1_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureBlobStorage1'"
		},
		"AzureSqlDatabase4_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'AzureSqlDatabase4'"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/AMLDatabase')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"connectionString": "[parameters('AMLDatabase_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureBlobStorage1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobStorage",
				"typeProperties": {
					"connectionString": "[parameters('AzureBlobStorage1_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/AzureSqlDatabase4')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureSqlDatabase",
				"typeProperties": {
					"connectionString": "[parameters('AzureSqlDatabase4_connectionString')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/RawTable')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AMLDatabase",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "AzureSqlTable",
				"schema": [
					{
						"name": "ACT_CODE",
						"type": "varchar"
					},
					{
						"name": "DESCRIPTION",
						"type": "varchar"
					},
					{
						"name": "AMOUNT",
						"type": "decimal",
						"precision": 18,
						"scale": 2
					}
				],
				"typeProperties": {
					"schema": "dbo",
					"table": "AML_RAW_DATA"
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AMLDatabase')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/amldataset')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "AzureBlobStorage1",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobStorageLocation",
						"fileName": "2017 and 2018 paymentsv2_part1.csv",
						"container": "aml"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "Account Code",
						"type": "String"
					},
					{
						"name": "Description1",
						"type": "String"
					},
					{
						"name": "Transaction Date",
						"type": "String"
					},
					{
						"name": "Due Date",
						"type": "String"
					},
					{
						"name": "Transaction Reference",
						"type": "String"
					},
					{
						"name": "Description",
						"type": "String"
					},
					{
						"name": "Accounting Period",
						"type": "String"
					},
					{
						"name": "Entry Date",
						"type": "String"
					},
					{
						"name": "Base Amount",
						"type": "String"
					},
					{
						"name": "Currency Code",
						"type": "String"
					},
					{
						"name": "Transaction Amount",
						"type": "String"
					},
					{
						"name": "Journal No.",
						"type": "String"
					},
					{
						"name": "Journal Line",
						"type": "String"
					},
					{
						"name": "Journal Type",
						"type": "String"
					},
					{
						"name": "Journal Source",
						"type": "String"
					},
					{
						"name": "Allocation Ref.",
						"type": "String"
					},
					{
						"name": "Allocation Marker",
						"type": "String"
					},
					{
						"name": "Allocation Date",
						"type": "String"
					},
					{
						"name": "Activity Code Analysis Code",
						"type": "String"
					},
					{
						"name": "Cost Centre  Analysis Code",
						"type": "String"
					},
					{
						"name": "Authority for Expenditure Analysis Code",
						"type": "String"
					},
					{
						"name": "Name",
						"type": "String"
					},
					{
						"name": "Division of Interest  Analysis Code",
						"type": "String"
					},
					{
						"name": "Withholding Tax Rate  Analysis Code",
						"type": "String"
					},
					{
						"name": "Contract Number",
						"type": "String"
					},
					{
						"name": "PO Number",
						"type": "String"
					},
					{
						"name": "Supplier Invoice Number",
						"type": "String"
					},
					{
						"name": "RST/SOCInvoice Number",
						"type": "String"
					},
					{
						"name": "Vendor Code",
						"type": "String"
					},
					{
						"name": "Vendor Name",
						"type": "String"
					},
					{
						"name": "Opex/Capex",
						"type": "String"
					},
					{
						"name": "Lifting",
						"type": "String"
					},
					{
						"name": "Billing to Partners Analysis Code",
						"type": "String"
					},
					{
						"name": "Quantity",
						"type": "String"
					},
					{
						"name": "Remark",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/AzureBlobStorage1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/aml-data-pipeline')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Copy data1",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "7.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [
							{
								"name": "Source",
								"value": "aml//2017 and 2018 paymentsv2_part1.csv"
							},
							{
								"name": "Destination",
								"value": "dbo.AML_RAW_DATA"
							}
						],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "AzureBlobStorageReadSettings",
									"recursive": true,
									"enablePartitionDiscovery": false
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings"
								}
							},
							"sink": {
								"type": "AzureSqlSink"
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"name": "Account Code",
											"type": "String",
											"physicalType": "String"
										},
										"sink": {
											"name": "ACT_CODE",
											"type": "String",
											"physicalType": "varchar"
										}
									},
									{
										"source": {
											"name": "Description1",
											"type": "String",
											"physicalType": "String"
										},
										"sink": {
											"name": "DESCRIPTION",
											"type": "String",
											"physicalType": "varchar"
										}
									},
									{
										"source": {
											"name": "Transaction Amount",
											"type": "String",
											"physicalType": "String"
										},
										"sink": {
											"name": "AMOUNT",
											"type": "Decimal",
											"physicalType": "decimal",
											"scale": 2,
											"precision": 18
										}
									}
								],
								"typeConversion": true,
								"typeConversionSettings": {
									"allowDataTruncation": true,
									"treatBooleanAsNumber": false
								}
							}
						},
						"inputs": [
							{
								"referenceName": "amldataset",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "RawTable",
								"type": "DatasetReference",
								"parameters": {}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {},
					"cancelAfter": {}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/amldataset')]",
				"[concat(variables('factoryId'), '/datasets/RawTable')]"
			]
		}
	]
}